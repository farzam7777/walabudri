<section class="subheader">
  <div class="container">
    <h1>Profile</h1>
    <div class="breadcrumb right">Home <i class="fa fa-angle-right"></i> <a href="#" class="current">Profile</a></div>
    <div class="clear"></div>
  </div>
</section>

<section class="module favorited-properties">
  <div class="container">
  
  <div class="row">
    <div class="col-lg-3 col-md-3 sidebar-left">
      <div class="widget member-card">
        <div class="member-card-header">
          <a href="#" class="member-card-avatar"> <%= image_tag current_user.image.url, style: "height: 83px;" %> </a>
          <h3><%= current_user.username.capitalize %></h3>
          <p><i class="fa fa-envelope icon"></i><%= current_user.email %></p>
        </div>
        <div class="member-card-content">
          <%= image_tag "images/hexagon.png" %>
          <ul>
            <li class="active"><a href="#"><i class="fa fa-user icon"></i>Profile</a></li>
            <li><a href="user-my-properties.html"><i class="fa fa-home icon"></i>My Properties</a></li>
            <li><a href="user-favorite-properties.html"><i class="fa fa-heart icon"></i>Favorited Properties</a></li>
            <li><a href="user-submit-property.html"><i class="fa fa-plus icon"></i>Submit Property</a></li>
            <li><a href="#"><i class="fa fa-reply icon"></i>Logout</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-9 col-md-9">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
       <%= devise_error_messages! %>
        <div class="row">
          <div class="col-lg-3">
            <div class="edit-avatar">
              <%= image_tag current_user.image.url, :class => "profile-avatar" %>
              <%= f.label :image %><br />
              <%= f.file_field :image, :class => "button small border", style: "width: 100%" %>
            </div>
          </div>
          <div class="col-lg-9">
            
            <div class="form-block">
              <%= f.label :username, style: "margin-bottom: -2%;" %><br />
              <%= f.text_field :username, autofocus: true, :class => "border" %>
            </div>
            <div class="form-block">
              <%= f.label :email, style: "margin-bottom: -2%;" %><br />
              <%= f.email_field :email, :class => "border" %>
            </div>
            <div class="form-block">
               <%= f.label :contact, style: "margin-bottom: -2%;" %><br />
               <%= f.text_field :contact, :class => "border" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-lg-6">
            <h4>Change Password</h4>
            <div class="divider"></div>
            <div class="form-block">
               <%= f.label :password, style: "margin-bottom: -2%;" %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", :class => "border" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
            </div>
            
            <div class="form-block">
              <%= f.label :password_confirmation, style: "margin-bottom: -2%;" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "border" %>
            </div>
            
            <div class="form-block">
                <%= f.label :current_password, style: "margin-bottom: -2%;" %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off", :class => "border" %>
              </div>
          
            <div class="form-block">
              <%= f.submit "Save Changes" %>
            </div>

            <% end %>
            
          </div>

          <div class="col-lg-6">
            <h4>Cancel my account</h4>
            <div class="divider"></div>

            <p>Unhappy? <hr><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

            <%= link_to "Back", :back %>
          </div>

        </div><!-- end row -->
    
    </div><!-- end col -->
  </div><!-- end row -->

  </div><!-- end container -->
</section>

<section class="module cta newsletter" style="background-color: #59aee9">
  <div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-7">
      <h3>Sign up for our <strong>newsletter.</strong></h3>
      <p>Lorem molestie odio. Interdum et malesuada fames ac ante ipsum primis in faucibus.</p>
