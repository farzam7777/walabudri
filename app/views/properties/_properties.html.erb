<% @properties.each do |property| %>
			
	<div class="property property-row property-row-sidebar shadow-hover">
      <a href="#" class="property-img">
        <div class="img-fade"></div>
        <!-- <div class="property-tag button status">For Sale</div> -->
        <div class="property-price">$<%= property.price %></div>
        <div class="property-color-bar"></div>
        <%= image_tag property.image.url, style: "width: 100%; height: 245px;" %>
      </a>
      <div class="property-content">
        <div class="property-title">
          <h4><a href="#"><%= link_to property.title, property_path(property) %></a></h4>
          <p class="property-address"><i class="fa fa-map-marker icon"></i><%= property.address %></p>
          <div class="clear"></div>
          <p class="property-text"><%= property.description.truncate_words(10) %></p>
        </div>
        <table class="property-details">
          <tr>
            <td><i class="fa fa-bed"></i> <%= property.bedrooms %> Beds</td>
            <td><i class="fa fa-tint"></i> <%= property.bath %> Baths</td>
            <td><i class="fa fa-expand"></i> <%= property.area %> Sq Ft</td>
          </tr>
        </table>
      </div>
      <div class="property-footer">
        <span class="left"><i class="fa fa-calendar-o icon"></i> <%= time_ago_in_words(property.created_at) %> ago</span>
        <span class="right">
          <a href="#"><i class="fa fa-heart-o icon"></i></a>
          <a href="#"><i class="fa fa-share-alt"></i></a>
          <a href="<%= property_path(property) %>" class="button button-icon"><i class="fa fa-angle-right"></i>Details</a>
        </span>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
  </div>

<% end %>

<%= paginate @properties %>