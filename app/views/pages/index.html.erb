<section class="module properties">
  <div class="container">

    <div class="module-header">
      <h2>Recently Added <strong>Properties</strong></h2>
      <p>Morbi accumsan ipsum velit nam nec tellus a odiose tincidunt auctor a ornare odio sed non mauris vitae erat consequat auctor</p>
    </div>

    <div class="row">
        <% @recents = Property.where(:isPublished => 1).first(3) %>
        <% @recents.each do |recent| %>
          <div class="col-lg-4 col-md-4">
            <div class="property shadow-hover">
              <a href="#" class="property-img">
                <div class="img-fade"></div>
                <div class="property-tag button status"><%= isPublished_status(recent.isPublished) %></div>
                <div class="property-price"><%= number_to_currency(recent.price) %></div>
                <div class="property-color-bar"></div>
                <%= image_tag recent.image.url %>
              </a>
              <div class="property-content">
                <div class="property-title">
                <h4><a href="#"> <%= recent.title %> </a></h4>
                  <p class="property-address"><i class="fa fa-map-marker icon"></i><%= recent.address %></p>
                </div>
                <table class="property-details">
                  <tr>
                    <td><i class="fa fa-bed"></i> <%= recent.bedrooms %> Beds</td>
                    <td><i class="fa fa-tint"></i> <%= recent.bath %> Baths</td>
                    <td><i class="fa fa-expand"></i> <%= recent.area %> Sq Ft</td>
                  </tr>
                </table>
              </div>
              <div class="property-footer">
                <span class="left"><i class="fa fa-calendar-o icon"></i> <%= time_ago_in_words(recent.created_at) %> ago</span>
                <span class="right">
                  <% if user_signed_in? %>
                    <% u = User.find(current_user.id) %>
                    <% if u.favorites.find_by_property_id(recent).blank? %>
                      <%= link_to "",mark_favorite_property_path(recent), :class => "fa fa-heart-o icon" %>
                    <% else %>  
                      <%= link_to "",'#', :class => "fa fa-heart icon" %>
                    <% end %>
                  <% end %>  
                </span>
                <div class="clear"></div>
              </div>
            </div>
          </div>
        <% end %>  
    </div><!-- end row -->

    <div class="center"><a href="<%= properties_path %>" class="button button-icon more-properties-btn"><i class="fa fa-angle-right"></i> View More Properties</a></div>

  </div><!-- end container -->
</section>

